void ts_add_nsec(int n, struct timespec *t)
{
	const int NS_PER_S = 1000000000;

	t->tv_nsec += n;
	while (t->tv_nsec >= NS_PER_S) {
		t->tv_nsec -= NS_PER_S;
		t->tv_sec++;
	}
}

