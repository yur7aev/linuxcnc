<!--
    NYX v3 LinuxCNC sample PyVCP config, 6 axes

    2019-2023, http://yurtaev.com
-->

<pyvcp>

<label text="Torque 0..5 (%)" />
<bar halpin="trq0" min_="-150" max_="150" bar_height="22" canvas_height="24" />
<bar halpin="trq1" min_="-150" max_="150" bar_height="22" canvas_height="24" />
<bar halpin="trq2" min_="-150" max_="150" bar_height="22" canvas_height="24" />
<bar halpin="trq5" min_="-150" max_="150" bar_height="22" canvas_height="36" />


<label text="Speed 5 (rpm)"/>
<bar halpin="s-vel" min_="-8000" max_="8000" bar_height="19" canvas_height="36" />

<labelframe text="Controller">
<hbox>
	<led halpin="led-ready" size="18" />
	<number halpin="phase" format="+4.2f" />
</hbox>
</labelframe>

<labelframe text="Amp online/ready/on">
    <hbox>
	<led halpin="led-offline0" on_color="gray80" off_color="green" size="18" />
	<led halpin="led-offline1" on_color="gray80" off_color="green" size="18" />
	<led halpin="led-offline2" on_color="gray80" off_color="green" size="18" />
	<led halpin="led-offline5" on_color="gray80" off_color="green" size="18" />
    </hbox>
    <hbox>
	<led halpin="led-ready0" off_color="gray80" disable_pin="True" size="18" />
	<led halpin="led-ready1" off_color="gray80" disable_pin="True" size="18" />
	<led halpin="led-ready2" off_color="gray80" disable_pin="True" size="18" />
	<led halpin="led-ready5" off_color="gray80" disable_pin="True" size="18" />
    </hbox>
    <hbox>
	<led halpin="led-enabled0" on_color="#0f0" off_color="gray80" size="18" />
	<led halpin="led-enabled1" on_color="#0f0" off_color="gray80" size="18" />
	<led halpin="led-enabled2" on_color="#0f0" off_color="gray80" size="18" />
	<led halpin="led-enabled5" on_color="#0f0" off_color="gray80" size="18" />
    </hbox>
</labelframe>

<labelframe text="Amp alarm/warning">
  <hbox><vbox>
    <hbox>
	<led halpin="led-alarm0" on_color="red" off_color="gray80" disable_pin="True" size="18" />
	<led halpin="led-alarm1" on_color="red" off_color="gray80" disable_pin="True" size="18" />
	<led halpin="led-alarm2" on_color="red" off_color="gray80" disable_pin="True" size="18" />
	<led halpin="led-alarm5" on_color="red" off_color="gray80" disable_pin="True" size="18" />
    </hbox>
    <hbox>
	<led halpin="led-warning0" on_color="yellow" off_color="gray80" disable_pin="True" size="18" />
	<led halpin="led-warning1" on_color="yellow" off_color="gray80" disable_pin="True" size="18" />
	<led halpin="led-warning2" on_color="yellow" off_color="gray80" disable_pin="True" size="18" />
	<led halpin="led-warning5" on_color="yellow" off_color="gray80" disable_pin="True" size="18" />
    </hbox>
  </vbox>
    <button halpin="reset-alarm" text="Rst" />
  </hbox>
    <hbox>
	<u32 halpin="code0" format="02x" />
	<u32 halpin="code1" format="02x" />
	<u32 halpin="code2" format="02x" />
	<u32 halpin="code5" format="02x" />
    </hbox>
</labelframe>

<labelframe text="ATC op/cl es/rs e/r t/cl/un">
    <hbox>
	<label text="cover open:"/> <led halpin="atc-op" on_color="red"   off_color="gray60" size="18" />
        <button halpin="atc-b-op" text="op" />
	<label text="closed:"/> <led halpin="atc-cl" on_color="green" off_color="gray60" size="18" />
        <button halpin="atc-b-cl" text="cl" />
    </hbox> <hbox>
	<label text="extended:"/> <led halpin="mag1-e" on_color="green"   off_color="gray60" size="18" />
	<label text="ext stop:"/> <led halpin="mag1-es" on_color="yellow"   off_color="gray60" size="18" />
        <button halpin="atc-b-e" text="ext" />
    </hbox> <hbox>
	<label text="retracted:"/> <led halpin="mag1-r" on_color="green" off_color="gray60" size="18" />
	<label text="ret stop:"/> <led halpin="mag1-rs" on_color="yellow" off_color="gray60" size="18" />
        <button halpin="atc-b-r" text="ret" />
    </hbox> <hbox>
	<label text="tool det:"/> <led halpin="mag1-tool" on_color="green" off_color="gray60" size="18" />
	<label text="clamp:"/> <led halpin="tool-cl" on_color="green" off_color="gray60" size="18" />
        <button halpin="tool-b-cl" text="cl" />
	<label text="uncl:"/> <led halpin="tool-un" on_color="green" off_color="gray60" size="18" />
        <button halpin="tool-b-un" text="un" />
    </hbox> <hbox>
	<s32 halpin="mag1-pos" format="02d"/>
	<label text="coin:"/>
	<led halpin="mag1-coin" on_color="green" off_color="gray80" size="18" />
	<label text="zspd:"/>
	<led halpin="mag1-zspd" on_color="green"   off_color="gray80" size="18" />
	<label text="alm:"/>
	<led halpin="mag1-alarm" on_color="red" off_color="gray80" size="18" />
    </hbox> <hbox>
     <checkbutton  halpin="pwr-on" text="pwr on" />
     <checkbutton  halpin="mag1-emg" text="emg" />
     <checkbutton  halpin="mag1-brake" text="brake" />
     <checkbutton  halpin="mag1-fwd" text="fwd" />
     <checkbutton  halpin="mag1-start" text="start" />
     <checkbutton  halpin="mag1-svon" text="svon" />
     <checkbutton  halpin="mag1-rst" text="rst" />
    </hbox> <hbox>
     <checkbutton  halpin="mode-2" text="2" />
     <checkbutton  halpin="mode-1" text="1" />
     <checkbutton  halpin="mode-0" text="0" />
    </hbox>
<scale>
    <width>"16"</width>
    <halpin>"station"</halpin>
    <resolution>1</resolution>
    <orient>HORIZONTAL</orient>
    <min_>0</min_>
    <max_>31</max_>
</scale>

</labelframe>

<labelframe text="Door io/ic/cl/lk pb tool">
    <hbox>
	<led halpin="door-iop" on_color="red"   off_color="gray80" size="18" />
	<led halpin="door-icl" on_color="yellow" off_color="gray80" size="18" />
	<led halpin="door-cl" on_color="yellow" off_color="gray80" size="18" />
	<led halpin="door-lk" on_color="green" off_color="gray80" size="18" />
	<led halpin="door-pb" on_color="blue" off_color="gray60" size="18" />
	<led halpin="tool-pb" on_color="blue" off_color="gray60" size="18" />
    </hbox>
</labelframe>

<labelframe text="air xfrm-overheat">
    <hbox>
	<led halpin="air" on_color="green" off_color="red" size="18" />
	<led halpin="toh" on_color="green" off_color="red" size="18" />
    </hbox>
</labelframe>

<labelframe text="trq xyz, home xyz, cyc0">
<hbox>
     <checkbutton  halpin="ilim" text="ilim" />
     <led halpin="x-ilim" on_color="yellow" off_color="gray80" size="18" />
     <led halpin="y-ilim" on_color="yellow" off_color="gray80" size="18" />
     <led halpin="z-ilim" on_color="yellow" off_color="gray80" size="18" />

     <led halpin="x-home" on_color="green" off_color="gray80" size="18" />
     <led halpin="y-home" on_color="green" off_color="gray80" size="18" />
     <led halpin="z-home" on_color="green" off_color="gray80" size="18" />
</hbox>
<hbox>
        <label text="X:"/>
	<s32 halpin="cyc0" format="06d"/>
</hbox><hbox>
        <label text="Y:"/>
	<s32 halpin="cyc1" format="06d" />
</hbox><hbox>
        <label text="Z:"/>
	<s32 halpin="cyc2" format="06d" />
</hbox>
</labelframe>

</pyvcp>
